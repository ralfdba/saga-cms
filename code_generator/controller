<?php
defined('BASEPATH') OR exit('No direct script access allowed');
/**
 * Description of $2
 * Generado por Saga CMS
 * @author robot-saga
 */
class $texto_camel_case extends CI_Controller{
    public function __construct(){
        parent::__construct();
        $this->load->model(array(
            'admin/$2_model',
            'ion_auth_model'
        ));
        $this->load->library(
            array(
                'notificaciones',
                'ion_auth'
            ));
    }
    
    public function index(){
        if($this->ion_auth->logged_in()){
            if($this->ion_auth->is_admin()){
                $data['info_usuario'] = $this->permisos->get_user_data();
                $limit_per_page = 10;//Limite para mostrar por pÃ¡gina
                $start_index = ($this->uri->segment(4)) ? $this->uri->segment(4) : 0;
                $total_records = $this->$2_model->get_total();
                if ($total_records > 0){
                    $data['results'] = $this->$2_model->get_current_page_records($limit_per_page, $start_index);             
                    $config['base_url'] = site_url() . '/$1/$2/index';
                    $config['total_rows'] = $total_records;
                    $config['per_page'] = $limit_per_page;
                    $config['uri_segment'] = 4;
                    $this->pagination->initialize($config);
                    $data['links'] = $this->pagination->create_links();
                }
                $this->vistas->__render_admin($data,'$2_lista');
            }else{
                redirect('login/index', 'refresh');
            }
        }else{
            redirect('login/index', 'refresh');
        }        
    }
    
    public function create(){
        if($this->ion_auth->logged_in()){
            if($this->ion_auth->is_admin()){
                $data['info_usuario'] = $this->permisos->get_user_data();
                $this->form_validation->set_error_delimiters('<div class=\"alert alert-danger\">', '</div>');
                $this->form_validation->set_rules('nombre', 'Nombre categor&iacute;a', 'required|trim|min_length[3]|max_length[40]');
                if ($this->form_validation->run() == FALSE){
                    $this->vistas->__render_admin($data, '$2_create');
                }else{
                    $params['nombre'] = $this->input->post('nombre');
                    $resp = $this->$2_model->insert($params);
                    if(is_null($resp)){
                        $data['message'] = 'Error al crear $2. ';
                    }else{
                        $data['message'] = 'Exito al crear $2.  <a href="'.$this->agent->referrer().'">Volver</a>';
                    }            
                    $this->vistas->__render_admin($data, 'error');
        
                }
            }else{
                redirect('login/index', 'refresh');
            }
        }else{
            redirect('login/index', 'refresh');
        }        
    }
    public function edit($id = NULL){
        if($this->ion_auth->logged_in()){
            if($this->ion_auth->is_admin()){
                if($id){
                    $params['$2_id'] = $id;
                    $data['$2_select'] = $this->$2_model->selectbyid($params);            
                }                  
                $data['info_usuario'] = $this->permisos->get_user_data();
                $this->form_validation->set_error_delimiters('<div class=\"alert alert-danger\">', '</div>');
                $this->form_validation->set_rules('id', 'ID', 'trim');
                $this->form_validation->set_rules('nombre', 'Nombre categor&iacute;a', 'required|trim|min_length[3]|max_length[40]');
                if ($this->form_validation->run() == FALSE){
                    $this->vistas->__render_admin($data, '$2_edit');
                }else{
                    $params['id'] = $this->input->post('id');
                    $params['nombre'] = $this->input->post('nombre');
                    $resp = $this->$2_model->update($params);
                    if(is_null($resp)){
                        $data['message'] = 'Error al editar $2.';
                    }else{
                        $data['message'] = 'Exito al editar $2.  <a href="'.$this->agent->referrer().'">Volver</a>';
                    }            
                    $this->vistas->__render_admin($data, 'error');
        
                }
            }else{
                redirect('login/index', 'refresh');
            }
        }else{
            redirect('login/index', 'refresh');
        }       
    }
    public function delete($id = NULL){
        if($this->ion_auth->logged_in()){
            if($this->ion_auth->is_admin()){
                $data['info_usuario'] = $this->permisos->get_user_data();
                if($id){
                    $resp = $this->$2_model->delete($id);
                    if($resp > 0){
                            $data['message'] = 'Exito al eliminar $2. <a href="'.$this->agent->referrer().'">Volver</a>';                            
                    }else{
                        $data['message'] = 'Error al eliminar $2';
                    }            
                    $this->vistas->__render_admin($data,'error');
                }
            }else{
                redirect('login/index', 'refresh');
            }
        }else{
            redirect('login/index', 'refresh');
        }        
    }
}
